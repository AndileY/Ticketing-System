

@page "/ticketapproval"
@using TicketsSystemBlazorApp.Service
@inject TicketServiceWrapper TicketService
@inject NavigationManager Navigation

<h3>Tickets Waiting for Approval</h3>

@if (isLoading)
{
    <p><em>Loading tickets...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (tickets == null || !tickets.Any())
{
    <div class="alert alert-info">
        ✅ No tickets waiting for approval.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Client</th>
                <th>Created On</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tickets)
            {
                <tr>
                    <td>@t.TicketId</td>
                    <td>@t.Title</td>
                    <td>@t.ClientName</td>
                    <td>@t.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@t.TicketCategoryName</td>
                    <td>
                        <button class="btn btn-success btn-sm"
                        @onclick="() => ApproveTicket(t.TicketId)"
                                disabled="@isProcessing">
                            @(isProcessing ? "Approving..." : "Approve")
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}

@code {
    private List<TicketServiceWrapper.TicketApprovalDto> tickets = new();
    private bool isLoading = true;
    private bool isProcessing = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTickets();
    }

    private async Task LoadTickets()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var ticketList = await TicketService.GetTicketsWaitingApprovalAsync();
            tickets = ticketList.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"❌ Failed to load tickets: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApproveTicket(int ticketId)
    {
        isProcessing = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            await TicketService.ApproveTicketAsync(ticketId);

            // Remove the approved ticket from the list
            tickets.RemoveAll(t => t.TicketId == ticketId);

            successMessage = $"✅ Ticket {ticketId} approved successfully!";
        }
      
        catch (Exception ex)
        {
            errorMessage = $"❌ Failed to approve ticket {ticketId}: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }
}

