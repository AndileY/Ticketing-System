@page "/ticket"
@using System.Security.Claims
@inject IClient TicketService

@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<h3 class="text-3xl font-bold mb-6">All Tickets</h3>

@if (isLoading)
{
    <p class="text-gray-600">Loading tickets...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="text-red-600 font-semibold mb-4">@errorMessage</div>
}
else if (tickets == null || !tickets.Any())
{
    <p class="text-gray-500">No tickets found.</p>
}
else
{
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        @foreach (var t in tickets)
        {
            <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 p-5 flex flex-col justify-between">
                <div>
                    <h4 class="text-xl font-semibold mb-2">@t.Title</h4>
                    <p class="text-gray-600 mb-3">@Shorten(t.Description)</p>

                    <div class="flex flex-wrap gap-2 text-sm text-gray-500 mb-3">

                        <!-- ✅ FIXED: Category Name -->
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                            Category: @GetCategoryName(t.TicketCategoryId)
                        </span>

                        <!-- ✅ FIXED: Correct Date Format -->
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full">
                            Created: @t.CreatedAt.ToString("yyyy-MM-dd")
                        </span>

                        @if (t.ResolvedAt != null)
                        {
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full">Resolved</span>
                        }
                        else
                        {
                            <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full">Pending</span>
                        }
                    </div>
                </div>

                <button class="mt-3 bg-blue-600 text-black px-4 py-2 rounded hover:bg-blue-700 transition-colors"
                @onclick="@(() => NavigationManager.NavigateTo($"/ticket/details/{t.TicketId}"))">
                    View Details
                </button>
            </div>
        }
    </div>
}

@code {
    private List<TicketReadOnlyDto> tickets = new();
    private List<TicketCategoryReadOnlyDto> categories = new();

    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            tickets = (await TicketService.TicketAllAsync()).ToList();
            categories = (await TicketService.TicketCategoryAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load tickets: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string Shorten(string text)
    {
        if (string.IsNullOrEmpty(text)) return "";
        return text.Length <= 80 ? text : text.Substring(0, 80) + "...";
    }

    private string GetCategoryName(int id)
    {
        var cat = categories.FirstOrDefault(c => c.TicketCategoryId == id);
        return cat?.Name ?? "Unknown";
    }
}

