

@page "/ticketassignment"
@inject TicketServiceWrapper TicketService
@inject NavigationManager Navigation

<h3>Ticket Assignment</h3>

@if (isLoading)
{
    <p>Loading tickets and assignees...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (tickets == null || !tickets.Any())
{
    <p>No tickets available for assignment.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Client</th>
                <th>Created On</th>
                <th>Category</th>
                <th>Assign To</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tickets)
            {
                <tr>
                    <td>@t.TicketId</td>
                    <td>@t.Title</td>
                    <td>@t.ClientName</td>
                    <td>@t.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@t.TicketCategoryName</td>
                    <td>
                        <select class="form-control" @bind="t.AssigneeUserId">
                            <option value="">-- Select Assignee --</option>
                            @foreach (var a in assignees)
                            {
                                <option value="@a.Id">@a.FirstName @a.LastName (@a.Email)</option>
                            }
                        </select>
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => AssignTicket(t.TicketId, t.AssigneeUserId)">
                            Assign
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TicketServiceWrapper.TicketAssignmentDto> tickets = new();
    private List<TicketServiceWrapper.AssigneeDto> assignees = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            tickets = (await TicketService.GetTicketsWaitingForAssignmentAsync()).ToList();
            assignees = (await TicketService.GetAssigneesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AssignTicket(int ticketId, string assigneeUserId)
    {
        if (string.IsNullOrEmpty(assigneeUserId))
        {
            errorMessage = "Please select an assignee.";
            return;
        }

        try
        {
            await TicketService.AssignTicketAsync(ticketId, assigneeUserId);
            tickets.RemoveAll(t => t.TicketId == ticketId); // remove assigned ticket
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to assign ticket {ticketId}: {ex.Message}";
        }
    }
}
