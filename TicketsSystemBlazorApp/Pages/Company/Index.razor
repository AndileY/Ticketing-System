@page "/company"
@inject IClient ClientService
@inject NavigationManager NavigationManager




<h3 class="mb-4"><i class="bi bi-building"></i> Company List</h3>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<p>
    <a class="btn btn-primary" href="/company/create"><i class="bi bi-plus-circle"></i> Create New Company</a>
</p>

@if (companies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Company Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in companies)
            {
                <tr>
                    <td>@company.CompanyName</td>
                    <td>
                        <a class="btn btn-info btn-sm me-1" href="/company/details/@company.CompanyId">View</a>
                        <a class="btn btn-warning btn-sm me-1" href="/company/update/@company.CompanyId">Edit</a>
                        <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(company.CompanyId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Deletion</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this company?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => showConfirmation = false">Cancel</button>
                    <button class="btn btn-danger" @onclick="DeleteConfirmed">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CompaniesReadOnly>? companies;
    private string? successMessage;
    private string? errorMessage;
    private bool showConfirmation = false;
    private int deleteCompanyId;




    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("🟢 Company Index page initialized.");

        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var wasSaved = query["saved"];

        if (wasSaved == "true")
        {
            Console.WriteLine("✅ Query param detected: saved=true");
            successMessage = "✅ Company saved successfully.";
        }



        await LoadCompanies();

      
    }

    private async Task LoadCompanies()
    {
        try
        {
            companies = (await ClientService.CompaniesAllAsync()).ToList();
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Failed to load companies: {ex.Message}";
        }
    }

    private void ConfirmDelete(int id)
    {
        deleteCompanyId = id;
        showConfirmation = true;
    }

    private async Task DeleteConfirmed()
    {
        try
        {
            await ClientService.CompaniesDELETEAsync(deleteCompanyId);
            successMessage = "✅ Company deleted successfully.";
            await LoadCompanies();
            StateHasChanged();
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Error deleting: {ex.Message}";
        }
        showConfirmation = false;
    }
}

