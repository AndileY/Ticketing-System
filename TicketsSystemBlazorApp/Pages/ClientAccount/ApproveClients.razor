@code {
    private List<ClientAccountDto> pendingClients = new();
    private bool isLoading = true;
    private bool isProcessing = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPendingClients();
    }

    private async Task LoadPendingClients()
    {
        isLoading = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            var allClients = await ClientAccountService.GetAll();
            pendingClients = allClients
                             .Where(c => !c.IsApproved)
                             .Select(c => new ClientAccountDto
                                 {
                                     ClientAccountId = c.ClientAccountId,
                                     FirstName = c.FirstName,
                                     LastName = c.LastName,
                                     Email = c.Email,
                                     CompanyName = c.CompanyName,
                                     IsApproved = c.IsApproved,
