    {
        isProcessing = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            var result = await ClientAccountService.ApproveClient(clientId);
            successMessage = $"✅ Approved client successfully: {result.Email}";
            await LoadPendingClients(); // Refresh the pending clients list
