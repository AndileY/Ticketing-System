@page "/ticketstatus"
@inject IClient ClientService
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Ticket Statuses</h3>

@if (statuses == null)
{
    <p><em>Loading...</em></p>
}
else if (!statuses.Any())
{
    <p><strong>No ticket statuses found.</strong></p>
}
else
{
    <a href="/ticketstatus/create" class="btn btn-success mb-3">➕ Create New</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Description</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in statuses)
            {
                <tr>
                    <td>@status.TicketStatusId</td>
                    <td>@status.Status</td>
                    <td>@status.Description</td>
                    <td>@status.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/ticketstatus/update/@status.TicketStatusId">Edit</a>
                        <a class="btn btn-sm btn-info ms-2" href="/ticketstatus/details/@status.TicketStatusId">Details</a>
                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => DeleteStatus(status.TicketStatusId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TicketStatusReadOnly>? statuses;

    protected override async Task OnInitializedAsync()
    {
        statuses = (await ClientService.TicketStatusAllAsync()).ToList();
        StateHasChanged();
    }

    private async Task DeleteStatus(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete ticket status #{id}?");
        if (!confirm) return;

        await ClientService.TicketStatusDELETEAsync(id);
        statuses = statuses!.Where(s => s.TicketStatusId != id).ToList();
        StateHasChanged();
    }
}

