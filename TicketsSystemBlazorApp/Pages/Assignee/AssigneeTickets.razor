@page "/assignee/tickets"
@inject TicketServiceWrapper TicketService
@using TicketsSystemBlazorApp.Service
@inject NavigationManager Navigation

<h3>My Assigned Tickets</h3>

@if (isLoading)
{
    <p>Loading tickets...</p>
}
else if (tickets == null || !tickets.Any())
{
    <p>No tickets assigned to you.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>TicketNo</th>
                <th>Title</th>
                <th>Category</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in tickets)
            {
                <tr>
                    <td>@ticket.TicketId</td>
                    <td>@ticket.Title</td>
                    <td>@ticket.TicketCategoryId</td>
                    <td>@ticket.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-primary"
                        @onclick="() => ViewTicket(ticket.TicketId)">
                            View
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ICollection<TicketReadOnlyDto>? tickets;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            tickets = await TicketService.GetAssignedTicketsAsync();
        }
        catch (ApiException ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewTicket(int ticketId)
    {
        Navigation.NavigateTo($"/assignee/tickets/{ticketId}");
    }
}
