@page "/assignee/tickets/{ticketId:int}"
@inject TicketServiceWrapper TicketService
@inject NavigationManager Navigation

<h3>Ticket Details</h3>

@if (isLoading)
{
    <p>Loading ticket...</p>
}
else if (ticket == null)
{
    <p>Ticket not found.</p>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@ticket.Title</h5>
            <p class="card-text"><strong>Category:</strong> @ticket.TicketCategoryId</p>
            <p class="card-text"><strong>Created At:</strong> @ticket.CreatedAt.ToString("yyyy-MM-dd")</p>
            <p class="card-text"><strong>Description:</strong> @ticket.Description</p>
            <p class="card-text"><strong>Status:</strong> @(ticket.ResolvedAt.HasValue ? "Closed" : "Open")</p>

            <div class="mt-3">
                @if (!ticket.ResolvedAt.HasValue)
                {
                    <button class="btn btn-success me-2" @onclick="StartTicket" disabled="@actionInProgress">Start</button>
                    <button class="btn btn-danger" @onclick="CloseTicket" disabled="@actionInProgress">Close</button>
                }
                else
                {
                    <button class="btn btn-warning" @onclick="ReopenTicket" disabled="@actionInProgress">Reopen</button>
                }

                <button class="btn btn-secondary ms-2" @onclick="GoBack">Back</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int ticketId { get; set; }

    private TicketDetailsDto? ticket;
    private bool isLoading = true;
    private bool actionInProgress = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTicketAsync();
    }

    private async Task LoadTicketAsync()
    {
        isLoading = true;
        try
        {
            ticket = await TicketService.GetTicketByIdAsync(ticketId);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error loading ticket: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task StartTicket()
    {
        if (ticket == null) return;

        actionInProgress = true;
        try
        {
            await TicketService.StartTicketAsync(ticket.TicketId);
            await LoadTicketAsync(); // refresh
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error starting ticket: " + ex.Message);
        }
        finally
        {
            actionInProgress = false;
        }
    }

    private async Task CloseTicket()
    {
        if (ticket == null) return;

        actionInProgress = true;
        try
        {
            await TicketService.CloseTicketAsync(ticket.TicketId);
            await LoadTicketAsync(); // refresh
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error closing ticket: " + ex.Message);
        }
        finally
        {
            actionInProgress = false;
        }
    }

    private async Task ReopenTicket()
    {
        if (ticket == null) return;

        actionInProgress = true;
        try
        {
            await TicketService.ReopenTicketAsync(ticket.TicketId);
            await LoadTicketAsync(); // refresh
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error reopening ticket: " + ex.Message);
        }
        finally
        {
            actionInProgress = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/assignee/tickets");
    }
}
