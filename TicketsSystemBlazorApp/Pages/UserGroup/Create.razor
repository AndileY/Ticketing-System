@page "/usergroup/create"
@inject IClient ClientService
@inject NavigationManager NavigationManager

<h3><i class="bi bi-plus-circle"></i> Create New User Group</h3>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="group" OnValidSubmit="HandleCreate">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Group Name</label>
        <InputText @bind-Value="group.GroupName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary me-2" disabled="@isSubmitting">
        <i class="bi bi-check-circle"></i> Create
    </button>
    <button type="button" class="btn btn-secondary" @onclick="Cancel">
        <i class="bi bi-x-circle"></i> Cancel
    </button>
</EditForm>

@code {
    private UserGroupCreateDto group = new();
    private string? successMessage;
    private string? errorMessage;
    private bool isSubmitting = false;

    private async Task HandleCreate()
    {
        errorMessage = null;
        successMessage = null;

        isSubmitting = true;

        try
        {
            await ClientService.UserGroupsPOSTAsync(group);
            successMessage = "✅ User Group created successfully.";
            await Task.Delay(1500);
            NavigationManager.NavigateTo("/usergroup");
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Failed to create group: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/usergroup");
    }
}
