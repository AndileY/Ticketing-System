

@page "/ticketdetail/details/{Id:int}"
@* @using TicketsSystemWebApi.Models.TicketDetail *@
@inject IClient Client
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<h3 class="text-2xl font-bold mb-4">📋 Ticket Detail</h3>

@if (isLoading)
{
    <p>Loading ticket...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="text-red-600">@errorMessage</div>
}
else if (ticket == null)
{
    <p>No ticket found.</p>
}
else
{
    <div class="bg-white rounded-lg shadow p-4 max-w-xl space-y-2">
        <p><strong>Ticket ID:</strong> @ticket.TicketId</p>
        <p><strong>Title:</strong> @ticket.TicketTitle</p>
        <p><strong>Client:</strong> @ticket.ClientName</p>
        <p><strong>Status:</strong> @ticket.Status</p>
        <p><strong>Start Date:</strong> @ticket.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>End Date:</strong> @(ticket.EndDate == default ? "-" : ticket.EndDate.ToString("yyyy-MM-dd HH:mm"))</p>
        <p><strong>Description:</strong> @ticket.Description</p>
    </div>

    <button class="bg-gray-600 text-white px-4 py-2 rounded mt-4" @onclick="GoBack">
        ← Back
    </button>
}

@code {
    [Parameter] public int Id { get; set; }

    private TicketDetailDto? ticket;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadTicketAsync();
        isLoading = false;
    }

    private async Task LoadTicketAsync()
    {
        try
        {
            ticket = await Client.TicketDetailGETAsync(Id);
        }
        catch (ApiException ex) when (ex.StatusCode == 404)
        {
            errorMessage = "Ticket not found.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading ticket: {ex.Message}";
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/ticketdetail");
    }
}

