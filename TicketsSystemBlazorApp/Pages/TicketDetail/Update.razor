@page "/ticketdetail/update/{Id:int}"
@inject IClient Client
@inject NavigationManager Nav

@using System.Globalization

<h3 class="text-3xl font-bold mb-6 text-gray-800">✏️ Update Ticket Detail</h3>

@if (model == null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="model" OnValidSubmit="HandleUpdate" class="max-w-xl bg-white p-6 rounded-2xl shadow-md space-y-4">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">Start Date</label>
            <InputDate @bind-Value="model.StartDate" class="w-full border px-3 py-2 rounded-lg" />
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">End Date</label>
            <InputDate @bind-Value="model.EndDate" class="w-full border px-3 py-2 rounded-lg" />
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">Description</label>
            <InputTextArea @bind-Value="model.Description" class="w-full border px-3 py-2 rounded-lg" />
        </div>

        <div class="pt-4 flex justify-between">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-black px-4 py-2 rounded-lg shadow">
                💾 Save
            </button>
            <button type="button" class="text-gray-600 hover:text-gray-800"  @onclick="@(() => Nav.NavigateTo("/ticketdetail"))">
                Cancel
            </button>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private TicketDetailUpdateDto model;

    protected override async Task OnInitializedAsync()
    {
        var detail = await Client.TicketDetailGETAsync(Id);
        model = new TicketDetailUpdateDto
            {
                StartDate = detail.StartDate,
                EndDate = detail.EndDate,
                Description = detail.Description
            };
    }

    private async Task HandleUpdate()
    {
        await Client.TicketDetailPUTAsync(Id, model);
        Nav.NavigateTo("/ticketdetail");
    }
}
