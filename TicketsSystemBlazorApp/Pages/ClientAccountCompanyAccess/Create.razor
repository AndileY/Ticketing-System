@page "/clientaccountcompanyaccess/create"
@inject IClient ClientService
@inject NavigationManager NavigationManager

<h3>Add Client ↔ Company Access</h3>

<EditForm Model="model" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Client Account ID</label>
        <InputNumber class="form-control" @bind-Value="model.ClientAccountId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Company ID</label>
        <InputNumber class="form-control" @bind-Value="model.CompanyId" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary ms-2" href="/clientaccountcompanyaccess">Cancel</a>
</EditForm>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger mt-2">@errorMessage</div>
}

@code {
    private ClientAccountCompanyAccessCreateDto model = new();
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        try
        {
            await ClientService.ClientAccountCompanyAccessPOSTAsync(model);
            NavigationManager.NavigateTo("/clientaccountcompanyaccess");
        }
        catch (ApiException ex)
        {
            errorMessage = ex.Message;
        }
    }
}
