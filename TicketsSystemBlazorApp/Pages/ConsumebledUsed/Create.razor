@page "/consumebledused/create"
@inject IClient ClientService
@inject NavigationManager NavigationManager

<h3>Create Consumebled Used</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

<EditForm Model="model" OnValidSubmit="HandleCreate">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Consumeble Item ID</label>
        <InputNumber @bind-Value="model.ConsumebleUsedId" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Quantity</label>
        <InputNumber @bind-Value="model.Quantity" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-secondary" type="button" @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    private ConsumebledUsedCreateDto model = new();
    private string? errorMessage;
    private string? successMessage;

    private async Task HandleCreate()
    {
        try
        {
            await ClientService.ConsumebledUsedPOSTAsync(model);
            successMessage = "✅ Created successfully.";
            await Task.Delay(1000);
            NavigationManager.NavigateTo("/consumebledused");
            StateHasChanged();
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Failed to create: {ex.Message}";
        }
    }

    private void Cancel() => NavigationManager.NavigateTo("/consumebledused");
}

