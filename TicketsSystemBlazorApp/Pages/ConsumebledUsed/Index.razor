@page "/consumebledused"
@inject IClient ClientService
@inject NavigationManager NavigationManager

<h3 class="mb-4"><i class="bi bi-box-seam-fill"></i> Consumebles Used</h3>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="mb-3 d-flex justify-content-end">
    <a href="/consumebledused/create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Add Used Item
    </a>
</div>

@if (items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Consumeble Item </th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in items)
                    {
                        <tr class="text-center align-middle">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-outline-info btn-sm" title="View" href="/consumebledused/details/@item.Id">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" title="Edit" href="/consumebledused/update/@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm" title="Delete" @onclick="() => ConfirmDelete(item.Id)">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (showConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => showConfirmation = false">Cancel</button>
                    <button class="btn btn-danger" @onclick="DeleteConfirmed">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ConsumebledUsedReadOnlyDto>? items;
    private string? successMessage;
    private string? errorMessage;
    private bool showConfirmation = false;
    private int deleteId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            items = (await ClientService.ConsumebledUsedAllAsync()).ToList();
            StateHasChanged();
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Failed to load items: {ex.Message}";
        }
    }

    private void ConfirmDelete(int id)
    {
        deleteId = id;
        showConfirmation = true;
    }

    private async Task DeleteConfirmed()
    {
        try
        {
            await ClientService.ConsumebledUsedDELETEAsync(deleteId);
            successMessage = "✅ Item deleted successfully.";
            errorMessage = null;
            showConfirmation = false;
            await LoadData();
            StateHasChanged();
        }
        catch (ApiException ex)
        {
            errorMessage = $"❌ Failed to delete item: {ex.Message}";
            successMessage = null;
            showConfirmation = false;
        }
    }
}
 