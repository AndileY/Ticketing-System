@page "/change-password"

@inject IClient ClientService
@inject NavigationManager Navigation
@inject ILocalStorageService localStorage

<h3>🔒 Change Your Password</h3>

<EditForm Model="model" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>New Password</label>
        <InputText type="password" class="form-control" @bind-Value="model.NewPassword" />
    </div>
    <div class="mb-3">
        <label>Confirm Password</label>
        <InputText type="password" class="form-control" @bind-Value="model.ConfirmPassword" />
    </div>
    <button class="btn btn-success">Change Password</button>
</EditForm>

@if (!string.IsNullOrEmpty(message))
{
    <p class="mt-3">@message</p>
}

@code {
    private PasswordChangeModel model = new();
    private string? message;

    private async Task Submit()
    {
        if (model.NewPassword != model.ConfirmPassword)
        {
            message = "❌ Passwords do not match!";
            return;
        }

        var userId = await localStorage.GetItemAsync<string>("temp_user_id");
        var token = await localStorage.GetItemAsync<string>("temp_token");

        if (userId == null || token == null)
        {
            message = "❌ Invalid or expired session.";
            return;
        }

        try
        {
            //await ClientService.UserChangePasswordAsync(userId, model.NewPassword);
            await ClientService.ChangePasswordAsync(userId, model.NewPassword);
            message = "✅ Password updated successfully.";

            // Clear temporary data and redirect
            await localStorage.RemoveItemAsync("temp_user_id");
            await localStorage.RemoveItemAsync("temp_token");

            Navigation.NavigateTo("/login");
        }
        catch (ApiException ex)
        {
            message = $"❌ Error: {ex.Message}";
        }
    }

    public class PasswordChangeModel
    {
        [Required]
        public string NewPassword { get; set; }

        [Required]
        public string ConfirmPassword { get; set; }
    }
}

